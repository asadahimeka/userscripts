{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "greasemonkey": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": ["unicorn"],
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended"
  ],
  "rules": {
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unexpected-multiline": "error",
    "no-unused-vars": "warn",
    "no-unused-expressions": "off",
    "unicorn/prevent-abbreviations": "off",
    "unicorn/prefer-dom-node-append": "off",
    "unicorn/prefer-dom-node-remove": "off"
  }
}
